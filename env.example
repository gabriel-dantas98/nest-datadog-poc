# Datadog Configuration
DD_API_KEY=your_datadog_api_key_here
DD_SITE=us5.datadoghq.com
DD_ENV=production
DD_SERVICE=nest-datadog-poc
DD_VERSION=1.0.0

# Agentless mode: send traces directly to Datadog (no local agent required)
# Required for PaaS/serverless deployments (Koyeb, Heroku, etc.)
DD_TRACE_AGENT_URL=https://trace.agent.us5.datadoghq.com

# Enable native Datadog debug logging to see all trace events
# When true, dd-trace will log all spans, traces, and events to console
DD_TRACE_DEBUG=false

# Optional: Log injection for correlating logs with traces
DD_LOGS_INJECTION=true

# Application
NODE_ENV=production
PORT=3000
